<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <!-- 基本カラー -->
    <Color x:Key="LeftWindowColor1">#FDE8CF</Color>
    <Color x:Key="LeftWindowColor12">#3F7FFF</Color>
    <Color x:Key="LeftWindowColor2">#CDE8FF</Color>
    <Color x:Key="LeftWindowColor22">#2020F0</Color>
    <Color x:Key="AccentColor">#8d5025</Color>
    <Color x:Key="ButtonThemeColor">#FFD700</Color>
    <Color x:Key="BracketColor">#6FF0FA</Color>
    <Color x:Key="CheckToggleColor1">#FDE8CF</Color>
    <Color x:Key="CheckToggleColor2">#FFA0DC</Color>
    <Color x:Key="TextColor">#000000</Color>
    <Color x:Key="TagColor">#0F0FF4</Color>
    <Color x:Key="RippleColor">#0F0FF4</Color>

    <Color x:Key="TitleBarAnimFrom1">#FFFAB450</Color>
    <Color x:Key="TitleBarAnimTo1">#FF64FA96</Color>
    <Color x:Key="TitleBarAnimFrom2">#FFFFA0DC</Color>
    <Color x:Key="TitleBarAnimTo2">#FF64A0FA</Color>

    <!-- SolidColorBrush 変換 -->
    <SolidColorBrush x:Key="LeftWindowColor1Brush" Color="{DynamicResource LeftWindowColor1}"/>
    <SolidColorBrush x:Key="LeftWindowColor2Brush" Color="{DynamicResource LeftWindowColor2}"/>
    <SolidColorBrush x:Key="CheckToggleColor1Brush" Color="{DynamicResource CheckToggleColor1}"/>
    <SolidColorBrush x:Key="CheckToggleColor2Brush" Color="{DynamicResource CheckToggleColor2}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="ButtonThemeColorBrush" Color="{StaticResource ButtonThemeColor}"/>
    <SolidColorBrush x:Key="BlacketColorBrush" Color="{DynamicResource BracketColor}"/>
    <SolidColorBrush x:Key="TextColorBrush" Color="{DynamicResource TextColor}"/>
    <SolidColorBrush x:Key="TagColorBrush" Color="{DynamicResource TagColor}"/>
    <SolidColorBrush x:Key="RippleColorBrush" Color="{DynamicResource RippleColor}"/>

    <!-- アイコンテンプレート定義 -->
    <fa:IconChar x:Key="ThemeIcon">Sun</fa:IconChar>

</ResourceDictionary>