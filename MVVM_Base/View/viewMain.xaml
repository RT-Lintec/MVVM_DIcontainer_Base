<UserControl x:Class="MVVM_Base.View.viewMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Style="{StaticResource Page_Style}">

    <UserControl.Resources>
        <!-- ▼ GroupBox 共通スタイル -->
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="2" 
                                CornerRadius="5" 
                                Background="Transparent" 
                                SnapsToDevicePixels="True">
                            <DockPanel>
                                <ContentPresenter x:Name="HeaderContent"
                                                  ContentSource="Header" 
                                                  RecognizesAccessKey="True"
                                                  Margin="5"
                                                  DockPanel.Dock="Top"/>
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 枠線を細くした派生スタイル -->
        <Style x:Key="GroupBoxThinBorderStyle" TargetType="GroupBox" BasedOn="{StaticResource GroupBoxStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1"
                            CornerRadius="5" 
                        Background="Transparent" 
                        SnapsToDevicePixels="True">
                            <DockPanel>
                                <ContentPresenter x:Name="HeaderContent"
                                          ContentSource="Header" 
                                          RecognizesAccessKey="True"
                                          Margin="5"
                                          DockPanel.Dock="Top"/>
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ▼ StackPanel 共通スタイル -->
        <Style x:Key="VerticalStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- ▼ TextBlock 共通スタイル -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- ▼ TextBox 共通スタイル -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="UnderlineComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- 下線ボーダー -->
                            <Border x:Name="Border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True"/>

                            <!-- 選択中のアイテム表示 -->
                            <ContentPresenter x:Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      Margin="3,0,25,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                            <!-- ドロップダウンボタン -->
                            <ToggleButton x:Name="DropDownToggle"
                                  Width="24" Height="20"
                                  Background="Transparent"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                              Fill="{TemplateBinding Foreground}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                            </ToggleButton>

                            <!-- ドロップダウンリスト -->
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">

                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">

                                    <Border x:Name="DropDownBorder"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            Background="{DynamicResource LeftWindowColor2Brush}"/>

                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <ItemsPresenter />
                                        <!-- StackPanel から変更 -->
                                    </ScrollViewer>
                                </Grid>
                            </Popup>

                        </Grid>

                        <!-- トリガー -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Communication -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="*"/>
            <!-- (余白や将来のListView用) -->
        </Grid.RowDefinitions>

        <!-- ▼ Communication グループ -->
        <GroupBox Grid.Row="0" Style="{StaticResource GroupBoxStyle}">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Communication" Foreground="{DynamicResource AccentBrush}" FontSize="18" FontWeight="Bold"/>
                    <Icon:PackIconMaterial Kind="LanConnect"
                                           Width="20" Height="20"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>
            </GroupBox.Header>

            <!-- 内部：MFC + Balance -->
            <StackPanel>
                <!-- ▼ MFC -->
                <GroupBox Grid.Row="0" Style="{StaticResource GroupBoxThinBorderStyle}">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!--<TextBlock Text="MFC" Foreground="{DynamicResource AccentBrush}" FontSize="18" FontWeight="Bold"/>-->
                            <Icon:PackIconMaterial Kind="CameraRear"
                                   Width="20" Height="20"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="{Binding MfcFriendlyName}"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontSize="14"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </GroupBox.Header>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Style="{StaticResource VerticalStackPanelStyle}">
                            <TextBlock Text="Port Number" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding AvailablePortList}"
                                      SelectedValue="{Binding MfcPort, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Style="{StaticResource VerticalStackPanelStyle}">
                            <TextBlock Text="Baud rate" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding MfcBaudrateList}"
                                      SelectedItem="{Binding MfcBaudrate, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Style="{StaticResource VerticalStackPanelStyle}">
                            <TextBlock Text="Data bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding MfcDatabitList}"
                                      SelectedItem="{Binding MfcDatabit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="6" Style="{StaticResource VerticalStackPanelStyle}">
                            <TextBlock Text="Stop bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding MfcStopbitList}"
                                      SelectedItem="{Binding MfcStopbit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="8" Style="{StaticResource VerticalStackPanelStyle}">
                            <TextBlock Text="Parity bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding MfcParitybitList}"
                                      SelectedItem="{Binding MfcParitybit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- ▼ Balance -->
                <GroupBox Grid.Row="1" Style="{StaticResource GroupBoxThinBorderStyle}">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!--<TextBlock Text="Balance" Foreground="{DynamicResource AccentBrush}" FontSize="18" FontWeight="Bold"/>-->
                            <Icon:PackIconMaterial Kind="ScaleBalance"
                                   Width="20" Height="20"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="{Binding BalanceFriendlyName}"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontSize="14"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </GroupBox.Header>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="77"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Style="{StaticResource VerticalStackPanelStyle}" Grid.ColumnSpan="2" Margin="0,0,0,10">
                            <TextBlock Text="Port Number" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding AvailablePortList}"
                                      SelectedValue="{Binding BalancePort, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Style="{StaticResource VerticalStackPanelStyle}" Margin="0,0,0,10">
                            <TextBlock Text="Baud rate" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding BalanceBaudrateList}"
                                      SelectedItem="{Binding BalanceBaudrate, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="5" Style="{StaticResource VerticalStackPanelStyle}" Margin="0,0,0,10">
                            <TextBlock Text="Data bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding BalanceDatabitList}"
                                      SelectedItem="{Binding BalanceDatabit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="7" Style="{StaticResource VerticalStackPanelStyle}" Margin="0,0,0,10">
                            <TextBlock Text="Stop bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding BalanceStopbitList}"
                                      SelectedItem="{Binding BalanceStopbit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="9" Style="{StaticResource VerticalStackPanelStyle}" Margin="0,0,0,10">
                            <TextBlock Text="Parity bit" Style="{StaticResource LabelTextStyle}"/>
                            <ComboBox ItemsSource="{Binding BalanceParitybitList}"
                                      SelectedItem="{Binding BalanceParitybit, Mode=TwoWay}"
                                      Style="{StaticResource UnderlineComboBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </GroupBox>

        <!-- ▼ 下段：Status グループ -->
        <GroupBox Grid.Row="1" Style="{StaticResource GroupBoxStyle}">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status" Foreground="{DynamicResource AccentBrush}" FontSize="18" FontWeight="Bold"/>
                    <Icon:PackIconMaterial Kind="InformationOutline"
                                   Width="20" Height="20"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>
            </GroupBox.Header>

            <!-- ▼ 内部レイアウト：2行3列 -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 上段左：Alerm A -->
                <GroupBox Grid.Row="0" Grid.Column="0" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Icon:PackIconMaterial Kind="Bell"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text=" A"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontSize="14"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <RadioButton Content="Enable" GroupName="ValveGroup" Margin="0 0 0 0" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="Disable" GroupName="ValveGroup" Margin="0 5 0 0" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

                <!-- 上段中央：Slow / Fast -->
                <GroupBox Grid.Row="0" Grid.Column="1" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!--<TextBlock Text="Slow / Fast" Foreground="{DynamicResource AccentBrush}" FontSize="14" FontWeight="Bold"/>-->
                            <Icon:PackIconPhosphorIcons Kind="ClockClockwiseBold"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <RadioButton Content="Slow" GroupName="PressureGroup" Margin="0 0 0 0" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="Fast" GroupName="PressureGroup" Margin="0 5 0 0" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

                <!-- 上段右：Ana / Dig -->
                <GroupBox Grid.Row="0" Grid.Column="2" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!--<TextBlock Text="Ana / Dig" Foreground="{DynamicResource AccentBrush}" FontSize="14" FontWeight="Bold"/>-->
                            <Icon:PackIconPhosphorIcons Kind="BinaryFill"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <RadioButton Content="Analog" GroupName="FlowGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="Digital" GroupName="FlowGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

                <!-- 下段左：Alerm B -->
                <GroupBox Grid.Row="1" Grid.Column="0" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Icon:PackIconBoxIcons Kind="RegularBell"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text=" B" Foreground="{DynamicResource AccentBrush}" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <RadioButton Content="Enable" GroupName="TempGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="Disable" GroupName="TempGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

                <!-- 下段中央：VO VS VC -->
                <GroupBox Grid.Row="1" Grid.Column="1" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Icon:PackIconMaterial Kind="PipeValve"
                                   Width="16" Height="16"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                        </StackPanel>
                    </GroupBox.Header>

                    <Grid Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <!-- 左側の空白 -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- 右寄せ -->
                        </Grid.ColumnDefinitions>

                        <!-- 1行目: VO と VC -->
                        <RadioButton Content="VO" Grid.Row="0" Grid.Column="1" Margin="0 0 0 5"
                     GroupName="AlarmGroup" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="VC" Grid.Row="0" Grid.Column="0" Margin="0"
                     GroupName="AlarmGroup" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>

                        <!-- 2行目: Control と Hold -->
                        <RadioButton Content="Controll" Grid.Row="1" Grid.Column="1" Margin="0"
                     GroupName="AlarmGroup" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="Hold" Grid.Row="1" Grid.Column="0" Margin="0"
                     GroupName="AlarmGroup" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </Grid>
                </GroupBox>


                <!-- 下段右：2% -->
                <GroupBox Grid.Row="1" Grid.Column="2" Style="{StaticResource GroupBoxThinBorderStyle}" Margin="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="2%" Foreground="{DynamicResource AccentBrush}" FontSize="14" FontWeight="Bold"/>
                            <!--<Icon:PackIconFontAwesome6 Kind="_2Solid"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <Icon:PackIconLucide Kind="Percent"
                                       Width="16" Height="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>-->
                        </StackPanel>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <RadioButton Content="(CN)Normal" GroupName="MessageGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="(C4)Hold" GroupName="MessageGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                        <RadioButton Content="(C3)Close" GroupName="MessageGroup" Margin="3" 
                             Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                    </StackPanel>
                </GroupBox>

            </Grid>
        </GroupBox>


    </Grid>
</UserControl>
