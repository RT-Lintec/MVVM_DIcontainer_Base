<Window x:Class="MVVM_Base.View.viewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entry" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- 左ナビ -->
            <ColumnDefinition Width="*"/>
            <!-- 右画面切替 -->
        </Grid.ColumnDefinitions>

        <!-- 左側ナビゲーション -->
        <StackPanel Grid.Column="0" Background="LightGray" VerticalAlignment="Stretch">
            <Button Content="Main画面" Command="{Binding ShowMainViewCommand}" Margin="5"/>
            <Button Content="A画面" Command="{Binding ShowAViewCommand}" Margin="5"/>
            <Button Content="B画面" Command="{Binding ShowBViewCommand}" Margin="5"/>
        </StackPanel>

        <!-- 右側画面切替 -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Background="White"/>
    </Grid>
</Window>