<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!-- テーマアイコンをリソースとして定義 -->
    <!--<fa:IconChar x:Key="ThemeIcon">Moon</fa:IconChar>-->
    
    <Style x:Key="SlideColorTheme" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonThemeColorBrush}"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Tag" Value="theme"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="22"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}">
                        <Icon:PackIconMynaUIIcons  Kind="{DynamicResource ThemeIconKind}"
                                       Width="20" Height="20"
                                        HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                       Foreground="{DynamicResource AccentBrush}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>