<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    
    <Style x:Key="SlideThumb" TargetType="Thumb">
        <Setter Property="Background" Value="#808080"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Canvas.Left" Value="0"/>
        <Setter Property="Canvas.Left" Value="0"/>
        <Setter Property="Tag" Value="end"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}" CornerRadius="22" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <fa:IconImage Icon="PowerOff" HorizontalAlignment="Center" VerticalAlignment="Center" Width="24" Height="24"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>